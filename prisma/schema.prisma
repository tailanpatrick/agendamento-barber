generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  bookings Booking[]
}

model Barbershop {
  id       String    @id @default(uuid())
  name     String
  address  String
  imageUrl String
  bookings Booking[]
  services Service[]
}

model Service {
  id           String     @id @default(uuid())
  name         String
  price        Decimal    @db.Decimal(10, 2)
  barbershopId String
  description  String
  imageUrl     String?
  bookings     Booking[]
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
}

model Booking {
  id           String     @id @default(uuid())
  barbershopId String
  serviceId    String
  userId       String
  date         DateTime   @db.Timestamp(6)
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  service      Service    @relation(fields: [serviceId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}
